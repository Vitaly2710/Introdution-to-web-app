{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "max-len": 0,
        "max-classes-per-file": [
            "error",
            { "ignoreExpressions": true, "max": 10 }
        ],
        "no-unused-vars": "off",
        "no-use-before-define": ["error", { "functions": false, "classes": true, "variables": false }],
        "no-console": "off"
    }

}
