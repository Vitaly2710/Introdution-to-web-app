{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "max-len": 0,
        "max-classes-per-file": [
            "error",
            { "ignoreExpressions": true, "max": 3 }
        ]
    }

}
